@page
@model LinkAggregatorWeb.Pages.User.TestsModel

@{
    ViewData["Title"] = "Stats";
}

<h1>Stats</h1>
<p>@string.Join(", ", Model.UrlData.Select(d => "'" + d.Url + "'"))</p>
<p>[@string.Join(", ", Model.UrlData.Select(d => d.Visits))]</p>

<div>
    <canvas id="urlChart" width="400" height="200"></canvas>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        var urlChartCtx = document.getElementById('urlChart').getContext('2d');
        var urlChart = new Chart(urlChartCtx, {
            type: 'bar',
            data: {
                labels: [@string.Join(", ", Model.UrlData.Select(d => "'" + d.Url + "'"))],
                datasets: [{
                    label: 'Visits',
                    data: [@string.Join(", ", Model.UrlData.Select(d => d.Visits))],
                    backgroundColor: ['rgba(75, 192, 192, 0.2)', 'rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)'],
                    borderColor: ['rgba(75, 192, 192, 1)', 'rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    }
