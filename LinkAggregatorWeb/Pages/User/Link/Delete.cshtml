@page
@model LinkAggregatorWeb.Pages.User.Link.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white pl-3">Delete URL</b></h2>
            <hr />
        </div>
        <h4>Are you sure you want to delete this URL along with it's statistics': </h4>
        <div class="mb-3">
            <label asp-for="HyperLink.Name"></label>
            <input asp-for="HyperLink.Name" disabled class="form-control disabled" />
        </div>
        <div class="mb-3">
            <label asp-for="HyperLink.Url"></label>
            <input asp-for="HyperLink.Url" disabled class="form-control disabled" />
        </div>
        <div class="mb-3">
            <label asp-for="HyperLink.HashCode"></label>
            <input asp-for="HyperLink.HashCode" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="HyperLink.ValidTo"></label>
            <input asp-for="HyperLink.ValidTo" disabled class="form-control disabled" />
        </div>
        <div class="mb-3">
            <label asp-for="HyperLink.ValidFrom"></label>
            <input asp-for="HyperLink.ValidFrom" disabled class="form-control disabled" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
</form>
